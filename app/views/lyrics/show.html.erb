<h2> The lyrics to <%= @song.title %> </h2>
<%= link_to "Add new lyrics", new_song_lyric_path(@song) %> 

<% @song.lyrics.each.with_index(1) do |lyric, index| %>
<h3><%= index %>. <%= lyric.part.category %></h3>
   <p> <%= lyric.lyrics %></p>
   <p> <%= lyric.count %>lyrics</p>
 <%end%>

<%= button_to "Delete", @song , method: :delete, data: {confirm: "Are you sure you want to delete #{@song.title}"}%>

