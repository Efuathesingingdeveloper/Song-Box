<%= form_for [@song, @lyric] do |f|%>

    <%= f.label :verse1 %><br>
    <%= f.text_area :verse1%><br>
    <%= f.label :verse2 %><br>
    <%= f.text_area :verse2%><br>
    <%= f.label :verse3 %><br>
    <%= f.text_area :verse3%><br>
    <%= f.label :verse4 %><br>
    <%= f.text_area :verse4%><br>
    <%= f.label :hook %><br>
    <%= f.text_area :hook%><br>
    <%= f.label :bridge %><br>
    <%= f.text_area :bridge%><br>
    <%= f.label :notes%><br>
    <%= f.text_area :notes%><br>
    <%= f.label :count%><br>
    <%= f.text_area :count%><br>
    <%= f.hidden_field :user_id, value: current_user.id%>
    <%= f.hidden_field :song_id, value: @song.id %>

    <%= f.submit%>
    <%end%>